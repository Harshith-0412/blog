<script>
$(document).ready(function() {
  // Check if the user is logged in
  $.ajax({
    url: '/auth/check-login', // Replace with the actual endpoint to check the authentication status
    method: 'GET',
    success: function(response) {
      if (response.userIsAuthenticated) {
        // User is logged in, update the button
        $('.loginBtn').text('Logout');
        $('.loginBtn').attr('href', '/logout');
      }
    }
  });
});
</script>